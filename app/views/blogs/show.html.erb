<div class="container">
  <h1><%= @blog.name %></h1>
  <p class="lead"><%= @blog.description %></p>
  <p id="notice"><%= notice %></p>
  <div class="btn-group" role="group" aria-label="...">
    <button type="button" class="btn btn-default"><%= link_to 'New Post', new_blog_post_path(@blog) %></button>
    <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_blog_path(@blog) %></button>
    <button type="button" class="btn btn-default"><%= link_to 'Back', blogs_path %></button>
  </div>
  <div class="blog-posts">
    <%= render :partial => "posts/show_post_row", :collection => @blog.posts, :as => :post %>
  </div>
</div>




