<h1>Listing Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.name %></td>
        <td><%= blog.user %></td>
        <td>
          <% if can? :read, blog %>
            <%= link_to 'Show', blog %>
          <% end %>
        </td>
        <td>
          <% if can? :update, blog %>
            <%= link_to 'Edit', edit_blog_path(blog) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, blog %>
            <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

