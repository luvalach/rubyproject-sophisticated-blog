<%= form_for comment, :remote => true do |f| %>
      <%= f.hidden_field :commentable_id, :as => :hidden, :value => comment.commentable_id %>
      <%= f.hidden_field :commentable_type, :as => :hidden, :value => comment.commentable_type %>
      <% unless comment_id.nil? %>
          <%= f.hidden_field :comment_id, :as => :hidden, :value => comment_id %>
      <% end %>
      <div class="field form-group">
        <%= f.text_area :body, class: 'form-control' %>
      </div>
      <div class="field form-group">
        <%= f.button :submit, :class => "btn btn-primary", :disable_with => "Submittingâ€¦" %>
      </div>
<% end %>